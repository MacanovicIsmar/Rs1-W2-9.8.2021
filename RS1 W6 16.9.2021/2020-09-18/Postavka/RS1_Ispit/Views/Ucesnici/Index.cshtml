@model RS1_Ispit_asp.net_core.Wm.UcesniciPrikazWM



<div class="row">


    <div class="col-md-5">


		<form id="forma" asp-action="Zakljucaj" asp-controller="Takmicenje" ajax-poziv="da" ajax-rezultat="Ajax">

			<input asp-for="Zakljucano" hidden />
			<input asp-for="TakmicenjaId" hidden />



			<div class="form-group">

				<label class="control-label" asp-for="Skolanaziv">Skola:</label>
				<input class="form-control" asp-for="Skolanaziv" readonly />
				<span class="text-danger" asp-validation-for="Skolanaziv"></span>

			</div>

			<div class="form-group">

				<label class="control-label" asp-for="Predmetnaziv">Predmet</label>
				<input class="form-control" asp-for="Predmetnaziv" readonly />
				<span class="text-danger" asp-validation-for="Predmetnaziv"></span>

			</div>

			<div class="form-group">

				<label class="control-label" asp-for="Razred">Razred:</label>
				<input class="form-control" asp-for="Razred" readonly />
				<span class="text-danger" asp-validation-for="Razred"></span>

			</div>

			<div class="form-group">

				<label class="control-label" asp-for="Datum">Datum:</label>
				<input class="form-control" asp-for="Datum" readonly />
				<span class="text-danger" asp-validation-for="Datum"></span>

			</div>

			<div class="form-group">

				<input value="zakljucaj" type="submit" />

			</div>











		</form>














    </div>

















</div>



<div id="Ajax">



</div>



<script>

	$(document).ready(function () {

		var forma = $("#forma");
		var url = "/Ucesnici/Prikaz"

		$.ajax({

			data: forma.serialize(),
			url: url,
			success: function(data)
			{

				$("#Ajax").html(data);


			}





		})









	})













</script>





